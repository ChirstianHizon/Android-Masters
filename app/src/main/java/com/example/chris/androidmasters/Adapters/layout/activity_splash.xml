<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.chris.androidmasters.SplashActivity">

    <ImageView
        android:id="@+id/img_project"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:tint="@color/lightGray"
        app:srcCompat="@drawable/vector_project"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.32" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/img_project"
        app:layout_constraintRight_toRightOf="@+id/img_project"
        app:layout_constraintTop_toBottomOf="@+id/img_project">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_project"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            app:layout_constraintLeft_toLeftOf="@+id/img_project"
            app:layout_constraintRight_toRightOf="@+id/img_project"
            app:layout_constraintTop_toBottomOf="@+id/img_project"
            app:srcCompat="@drawable/vector_logo" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
