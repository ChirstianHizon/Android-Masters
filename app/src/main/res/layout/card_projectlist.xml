<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/common_google_signin_btn_text_light_default" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_image"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_image"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Donation Title"
                        android:textColor="#333"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="62dp"
                        tools:layout_editor_absoluteY="187dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                        <TextView
                            android:id="@+id/tv_organization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/iv_logo"
                            android:text="NGO Name"
                            android:textColor="#888" />

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/iv_logo"
                            android:text="NGO Name"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/pb_status"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="26dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:visibility="gone"
                        tools:layout_editor_absoluteX="62dp"
                        tools:layout_editor_absoluteY="187dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_current"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:text="50%"
                            android:textAlignment="viewStart"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/tv_donated_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:text="49"
                            android:textAlignment="viewStart"
                            android:textColor="#333"
                            android:textDirection="rtl"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:text="31"
                            android:textAlignment="viewStart"
                            android:textColor="#333"
                            android:textDirection="rtl"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_current_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="funded"
                            android:textAlignment="viewStart"
                            android:textColor="#555"
                            android:textSize="13sp"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/tv_goal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="backers"
                            android:textAlignment="viewStart"
                            android:textColor="#555"
                            android:textDirection="rtl"
                            android:textSize="13sp"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/tv_date_measure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="days to go"
                            android:textAlignment="viewStart"
                            android:textColor="#555"
                            android:textDirection="rtl"
                            android:textSize="13sp"
                            tools:layout_editor_absoluteX="62dp"
                            tools:layout_editor_absoluteY="187dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>